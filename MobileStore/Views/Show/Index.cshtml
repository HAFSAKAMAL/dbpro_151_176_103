
@model IEnumerable<Example.Models.SaveViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Startmin - Bootstrap Admin Theme</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Dash/css/bootstrap.min.css" rel="stylesheet">

    <!-- MetisMenu CSS -->
    <link href="~/Dash/css/metisMenu.min.css" rel="stylesheet">

    <!-- Timeline CSS -->
    <link href="~/Dash/css/timeline.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Dash/css/startmin.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="~/Dash/css/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div id="wrapper">

        <!-- Sidebar -->
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">

                <ul class="nav" id="side-menu">
                    <li class="sidebar-search">
                        <div class="input-group custom-search-form">
                            <input type="text" class="form-control" placeholder="Search...">
                            <span class="input-group-btn">
                                <button class="btn btn-primary" type="button">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </li>
                    <li>
                        <a href="#" class="active"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-sitemap fa-fw"></i> Companies<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href=@Url.Content("/Show/Index")>Nokia</a>
                            </li>
                            <li>
                                <a href=@Url.Content("/SaveData/Insert_News")>Samsung</a>
                            </li>
                            <li>
                                <a href=@Url.Content("/SaveData/Insert_News")>QMobile</a>
                            </li>
                            <li>
                                <a href=@Url.Content("/SaveData/Insert_News")>Huawei</a>
                            </li>

                            <li>
                                <a href=@Url.Content("/Search/Index")>Search by Model</a>
                            </li>

                        </ul>
                    </li>



                </ul>

            </div>
        </div>

        <div id="page-wrapper">
            <div class="container-fluid">

                <div class="row">
                    <h1 style="align-content:center">Nokia</h1>

                    <div class="col-lg-12">
                        @foreach (var item in Model)
                        {

                            if (item.manufacturer.Name == "Nokia")
                            {

                                <div class="detalis-image" style="all:inherit">
                                    <div class="flexslider">
                                        <ul class="slides">
                                            <li style="all:initial">

                                                @{
                                                    var base64 = Convert.ToBase64String(item.image.Front);
                                                    var imgsrc = string.Format("data:image/gif;base64,{0}", base64);

                                                }
                                                <img src="@imgsrc" data-imagezoom="true" class="img-responsive" alt="" />

                                            </li>

                                        </ul>
                                    </div>
                                </div>

                                <div class="detalis-image-details">

                                </div><br />
                                <div class="brand-value">
                                    <h3>Product-Complete Details With Value</h3>
                                    <div class="left-value-details">
                                        <ul>
                                            <li>Price:</li>
                                            <li>@item.model.Price</li>

                                            <br />
                                            <li><p>Not rated</p></li>
                                        </ul>
                                    </div>
                                    <div class="right-value-details">
                                        <a href="#">Instock</a>
                                        <p>No reviews</p>
                                    </div>
                                    <div class="clear"> </div>
                                </div>



                                                        }
                                                    }

                    </div>

                </div>
            </div>
        </div>

</body>
</html>


